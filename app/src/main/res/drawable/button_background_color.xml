<!-- res/drawable/button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="135"
        android:centerColor="#FF4100"
        android:endColor="#FF2F00"
        android:startColor="#F48B44"
        android:type="linear" />

    <corners android:radius="8dp" /> <!-- Optional: Add rounded corners -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" /> <!-- Optional: Add padding -->

</shape>
